---
import BaseLayout from "../layouts/BaseLayout.astro";
const siteTitle = "Ankur Kelkar's Data Engineering Blog";
const siteDescription = "Weekly insights on data technologies, tutorials, and my resume.";
---
<BaseLayout title={siteTitle}>
  <section class="relative h-[85vh] flex flex-col justify-center items-center text-center px-4 overflow-hidden">
    
    <div class="relative z-10 max-w-3xl space-y-8">
      <h1 class="text-7xl md:text-8xl font-black bg-clip-text text-transparent bg-gradient-to-r from-indigo-400 via-pink-400 to-yellow-200 leading-tight">
        Ankur Kelkar
      </h1>
      <p class="text-2xl md:text-3xl text-indigo-100 font-medium tracking-wide">
        Data Engineer & Analytics Architect
      </p>
      <p class="text-lg text-gray-300 max-w-2xl mx-auto">
        {siteDescription}
      </p>
      
      <div class="flex flex-wrap justify-center gap-6 mt-12">
        <a 
          href="/resume" 
          class="group px-8 py-4 rounded-2xl bg-gradient-to-r from-pink-600 to-yellow-400 text-gray-900 font-bold text-lg shadow-2xl hover:shadow-pink-500/25 hover:scale-105 transform transition-all duration-300"
        >
          <span class="group-hover:animate-pulse">View Resume</span>
        </a>
        <a 
          href="/blog" 
          class="px-8 py-4 rounded-2xl border-2 border-indigo-400 text-indigo-200 hover:bg-indigo-900/50 hover:border-pink-400 font-bold text-lg shadow-xl hover:shadow-indigo-500/25 transition-all duration-300"
        >
          Read Blog
        </a>
      </div>
    </div>
    
    <!-- Floating elements -->
    <div class="absolute top-20 left-10 w-4 h-4 bg-pink-400 rounded-full animate-bounce"></div>
    <div class="absolute top-40 right-20 w-6 h-6 bg-yellow-300 rounded-full animate-ping"></div>
    <div class="absolute bottom-32 left-20 w-3 h-3 bg-indigo-400 rounded-full animate-pulse"></div>
  </section>
</BaseLayout>
