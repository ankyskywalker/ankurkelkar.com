---
import BaseLayout from "../layouts/BaseLayout.astro";
const siteTitle = "Ankur Kelkarâ€™s Data Engineering Blog";
const siteDescription = "Weekly insights on data technologies, tutorials, and my resume.";
---
<BaseLayout title={siteTitle}>
  <section class="relative h-[70vh] flex flex-col items-center justify-center text-center px-4 overflow-hidden">
    <!-- optional background graphic -->
    <div class="absolute inset-0 opacity-20 bg-[url('/grid.svg')] bg-center bg-repeat"></div>
    <div class="relative z-10 max-w-2xl">
      <h1 class="text-5xl font-extrabold bg-clip-text text-transparent bg-gradient-to-r from-white to-gray-300">
        {siteTitle}
      </h1>
      <p class="mt-4 text-lg text-gray-300">
        {siteDescription}
      </p>
      <div class="mt-8 flex flex-wrap justify-center gap-4">
        <a
          href="/resume"
          class="px-6 py-3 bg-indigo-600 hover:bg-indigo-500 rounded-lg text-white font-medium transition"
          >View Resume</a
        >
        <a
          href="/blog"
          class="px-6 py-3 border border-indigo-600 hover:bg-indigo-700 rounded-lg text-indigo-200 transition"
          >Read Blog</a
        >
      </div>
    </div>
  </section>
</BaseLayout>
