---
import '../styles/global.css';
import Layout from '../layouts/Layout.astro';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '../components/ui/Card';
import { Badge } from '../components/ui/Badge';
import { Button } from '../components/ui/Button';
---

<Layout>
	<main class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900">
		<!-- Background Pattern -->
		<div class="absolute inset-0 bg-grid-white/[0.02] bg-[size:50px_50px]"></div>
		<div class="absolute inset-0 bg-gradient-to-t from-slate-900/80 via-slate-900/20 to-slate-900/80"></div>
		
		<div class="relative z-10 container mx-auto px-4 py-16 lg:py-24">
			<div class="max-w-4xl mx-auto">
				<!-- Hero Section -->
				<div class="text-center mb-16">
					<div class="mb-8">
						<div class="w-32 h-32 mx-auto rounded-full bg-gradient-to-r from-blue-500 to-purple-600 flex items-center justify-center text-4xl font-bold text-white shadow-2xl">
							AK
						</div>
					</div>
					
					<h1 class="text-4xl lg:text-6xl font-bold bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent mb-6">
						Ankur Kelkar
					</h1>
					
					<h2 class="text-xl lg:text-2xl text-blue-400 font-semibold mb-6">
						Data Engineer & Analytics Architect
					</h2>
					
					<p class="text-lg text-gray-300 max-w-3xl mx-auto leading-relaxed mb-8">
						Experienced Data Engineer with 10+ years in Travel Tech, Marketing Technology & Healthcare IT. 
						Passionate about building scalable data solutions and transforming businesses through data-driven insights.
					</p>
					
					<!-- CTA Buttons -->
					<div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
						<a href="/resume" class="inline-flex">
							<Button client:load size="lg" class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-semibold transition-all duration-200 shadow-lg hover:shadow-xl">
								<svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="mr-2">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
								</svg>
								View Resume
							</Button>
						</a>
						<a href="/blog" class="inline-flex">
							<Button client:load variant="outline" size="lg" class="border-gray-600 text-gray-300 hover:bg-gray-800 px-8 py-3 rounded-lg font-semibold transition-all duration-200">
								<svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="mr-2">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
								</svg>
								Read Blog
							</Button>
						</a>
					</div>
					
					<!-- Social Links -->
					<div class="flex justify-center gap-4 mb-16">
						<a href="https://linkedin.com/in/ankurkelkar" target="_blank" rel="noopener" 
						   class="w-12 h-12 rounded-lg bg-gray-800 hover:bg-blue-600 flex items-center justify-center transition-all duration-200 hover:scale-110">
							<svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24" class="text-gray-300">
								<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
							</svg>
						</a>
						<a href="https://twitter.com/ankyskywalker" target="_blank" rel="noopener"
						   class="w-12 h-12 rounded-lg bg-gray-800 hover:bg-blue-400 flex items-center justify-center transition-all duration-200 hover:scale-110">
							<svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24" class="text-gray-300">
								<path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
							</svg>
						</a>
						<a href="mailto:ankur.kelkar@gmail.com"
						   class="w-12 h-12 rounded-lg bg-gray-800 hover:bg-green-600 flex items-center justify-center transition-all duration-200 hover:scale-110">
							<svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="text-gray-300">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
							</svg>
						</a>
					</div>
				</div>

				<!-- Skills Section -->
				<Card class="bg-gray-900/50 backdrop-blur-sm border-gray-700">
					<CardHeader class="text-center">
						<CardTitle class="text-2xl text-white">Technical Expertise</CardTitle>
						<CardDescription class="text-gray-400">Technologies and tools I work with</CardDescription>
					</CardHeader>
					<CardContent>
						<div class="flex flex-wrap gap-3 justify-center">
							<Badge variant="secondary" class="bg-blue-900/50 text-blue-300 border-blue-700 px-4 py-2 text-sm">
								Snowflake
							</Badge>
							<Badge variant="secondary" class="bg-purple-900/50 text-purple-300 border-purple-700 px-4 py-2 text-sm">
								dbt
							</Badge>
							<Badge variant="secondary" class="bg-yellow-900/50 text-yellow-300 border-yellow-700 px-4 py-2 text-sm">
								Python
							</Badge>
							<Badge variant="secondary" class="bg-orange-900/50 text-orange-300 border-orange-700 px-4 py-2 text-sm">
								AWS
							</Badge>
							<Badge variant="secondary" class="bg-cyan-900/50 text-cyan-300 border-cyan-700 px-4 py-2 text-sm">
								Terraform
							</Badge>
							<Badge variant="secondary" class="bg-green-900/50 text-green-300 border-green-700 px-4 py-2 text-sm">
								SQL
							</Badge>
							<Badge variant="secondary" class="bg-indigo-900/50 text-indigo-300 border-indigo-700 px-4 py-2 text-sm">
								Looker
							</Badge>
							<Badge variant="secondary" class="bg-red-900/50 text-red-300 border-red-700 px-4 py-2 text-sm">
								Data Architecture
							</Badge>
						</div>
					</CardContent>
				</Card>
			</div>
		</div>
	</main>
</Layout>

<style>
	.bg-grid-white\/\[0\.02\] {
		background-image: radial-gradient(circle, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
	}
</style>
