---
import BaseLayout from "../layouts/BaseLayout.astro";
import resume from "../content/resume.json";
const pageTitle = "Ankur Kelkar â€“ Resume";
---
<BaseLayout title={pageTitle}>
  <div class="container mx-auto px-4 py-12">
    <div class="prose prose-invert lg:prose-xl mx-auto mb-16">
      <!-- Header Card -->
      <div class="bg-gradient-to-r from-slate-800/80 to-purple-900/80 backdrop-blur-md rounded-3xl p-8 mb-12 shadow-2xl border border-purple-500/20">
        <header class="text-center space-y-4">
          <h1 class="text-5xl font-black bg-clip-text text-transparent bg-gradient-to-r from-indigo-200 via-pink-300 to-yellow-100 mb-2">
            {resume.basics.name}
          </h1>
          <p class="text-xl text-gray-300 font-semibold">{resume.basics.label} Â· {resume.basics.location}</p>
          
          <div class="flex flex-wrap justify-center gap-4 mt-6">
            <a href={`mailto:${resume.basics.email}`} class="px-4 py-2 bg-indigo-600/30 rounded-full text-indigo-300 hover:bg-indigo-600/50 transition">
              {resume.basics.email}
            </a>
            <a href={`tel:${resume.basics.phone}`} class="px-4 py-2 bg-pink-600/30 rounded-full text-pink-300 hover:bg-pink-600/50 transition">
              {resume.basics.phone}
            </a>
          </div>
          
          <div class="flex justify-center space-x-8 mt-4">
            {resume.basics.profiles.map((profile) => (
              <a href={profile.url} class="text-blue-400 hover:text-blue-300 font-semibold">{profile.network}</a>
            ))}
          </div>
        </header>
      </div>

      <!-- Profile Section -->
      <section class="bg-slate-800/60 backdrop-blur-md rounded-2xl p-8 mb-8 shadow-xl border border-gray-700/30">
        <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-pink-400 to-yellow-300 mb-4">
          Profile
        </h2>
        <p class="text-gray-200 leading-relaxed text-lg">
          {resume.basics.summary}
        </p>
      </section>

      <!-- Summary Section -->
      <section class="bg-slate-800/60 backdrop-blur-md rounded-2xl p-8 mb-8 shadow-xl border border-gray-700/30">
        <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-pink-400 to-yellow-300 mb-4">
          Summary
        </h2>
        <div class="space-y-8">
          <div class="border-l-4 border-pink-500 pl-6">
            <ul class="space-y-2 text-gray-200">
              {resume.summary_list.map((item) => (
                <li>â€¢ {item}</li>
              ))}
            </ul>
          </div>
        </div>
      </section>

      <!-- Employment History -->
      <section class="bg-slate-800/60 backdrop-blur-md rounded-2xl p-8 mb-8 shadow-xl border border-gray-700/30">
        <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 to-pink-400 mb-6">
          Employment History
        </h2>
        
        <div class="space-y-8">
          {resume.work.map((job) => (
            <div class={`border-l-4 border-${job.color}-500 pl-6`}>
              <h3 class={`text-xl font-bold text-${job.color}-300`}>{job.position} Â· {job.company} ({job.location})</h3>
              <p class="text-gray-400 font-medium mb-3">{job.startDate} â€“ {job.endDate}</p>
              <ul class="space-y-2 text-gray-200">
                {job.highlights.map((highlight) => (
                  <li>â€¢ {highlight}</li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </section>

      <!-- Education & Interests -->
      <div class="grid grid-cols-1 md:grid-cols-1 gap-6 mb-8">
        <section class="bg-slate-800/60 backdrop-blur-md rounded-2xl p-6 shadow-xl border border-gray-700/30">
          <h2 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-cyan-400 mb-4">
            Education
          </h2>
          <div class="space-y-2 border-l-4 border-pink-500 pl-6 text-gray-200">
            {resume.education.map((edu) => (
              <p><span class="font-bold">{edu.area}</span>, {edu.institution} Â· {edu.startDate}â€“{edu.endDate} Â· {edu.score}</p>
            ))}
          </div>
        </section>
      </div>

      <!-- Courses & Certifications -->
      <div class="grid grid-cols-1 md:grid-cols-1 gap-6 mb-8">
        <section class="bg-slate-800/60 backdrop-blur-md rounded-2xl p-6 shadow-xl border border-gray-700/30">
          <h2 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-cyan-400 mb-4">
            Courses & Certifications
          </h2>
          <div class="space-y-2 border-l-4 border-blue-500 pl-6 text-gray-200">
            {resume.certifications.map((cert) => (
              <p>{cert.name}, {cert.issuer}</p>
            ))}
          </div>
        </section>
      </div>

      <!-- Skills Section -->
      <section class="bg-slate-800/60 backdrop-blur-md rounded-2xl p-8 mb-8 shadow-xl border border-gray-700/30">
        <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-pink-400 mb-6">
          Skills
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 p-6 mb-8">
          {resume.skills.slice(0, 3).map((skill) => (
            <div class="space-y-3">
              <span class={`font-bold text-${skill.color}-500 text-xl`}>
                {skill.name === "Software and Services" ? "ğŸ’» " : skill.name === "Data Skills" ? "ğŸ“ˆ " : "ğŸ› ï¸ "}{skill.name} :
              </span> 
              <div class={`flex flex-wrap gap-3 border-l-3 border-${skill.color}-500 pl-4 mt-4`}>
                <ul class="space-y-2 text-gray-200">
                  {skill.keywords.map((keyword) => (
                    <li class="text-gray-200">â€¢ <span set:html={keyword.replace(/(\w+:)/g, '<em class="font-bold">$1</em>')}></span></li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 p-8 mb-8">
          {resume.skills.slice(3).map((skill) => (
            <div class="space-y-3">
              <span class={`font-bold text-${skill.color}-500 text-xl`}>
                {skill.name === "Business Domains" ? "ğŸ¢ " : skill.name === "Interests" ? "ğŸŒŸ " : "ğŸ¤ "}{skill.name}
                {skill.name !== "Interests" && skill.name !== "Business Domains" ? " :" : ""}
              </span> 
              <div class={`flex flex-wrap gap-3 border-l-3 border-${skill.color}-500 pl-4 mt-4`}>
                <ul class="space-y-2 text-gray-200">
                  {skill.keywords.map((keyword) => (
                    <li class="text-gray-200">â€¢ <span set:html={keyword.replace(/(\w+:)/g, '<em class="font-bold">$1</em>')}></span></li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
        </div>
      </section>

    </div>
  </div>
</BaseLayout>
