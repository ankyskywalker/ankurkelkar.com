---
import "../styles/global.css";
import Header from "../components/Header.astro";
export interface Props {
  title?: string;
}
const { title = "Ankur Kelkar – Data & Analytics Engineer" } = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="dark scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="bg-gradient-to-br from-[#120026] via-[#0f172a] to-[#2a003f] text-gray-100 antialiased flex flex-col min-h-screen">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <footer class="bg-[#181026]/70 backdrop-blur-sm py-6 mt-12">
      <div class="container mx-auto px-4 text-center text-xs text-gray-500 tracking-wider">
        © {new Date().getFullYear()} Ankur Kelkar · Powered by Astro + Tailwind
      </div>
    </footer>
  </body>
</html>
