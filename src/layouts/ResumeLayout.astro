---
import '../styles/global.css'

export interface Props {
  title?: string;
}

const { title = "Resume" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Professional resume of Ankur Kelkar - Data and Analytics Engineer" />
    <meta name="author" content="Ankur Kelkar" />
    <meta name="keywords" content="Data Engineer, Analytics Engineer, Resume, CV, Ankur Kelkar" />
    <title>{title}</title>
    
    <!-- Preload fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  
  <body class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 font-sans antialiased">
    <!-- Background Pattern -->
    <div class="fixed inset-0 bg-grid-white/[0.02] bg-[size:50px_50px]"></div>
    <div class="fixed inset-0 bg-gradient-to-t from-slate-900/80 via-slate-900/20 to-slate-900/80"></div>
    
    <div class="relative z-10 container mx-auto px-4 py-8">
      <slot />
    </div>
  </body>
</html>

<style>
  .bg-grid-white\/\[0\.02\] {
    background-image: radial-gradient(circle, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
  }
</style>