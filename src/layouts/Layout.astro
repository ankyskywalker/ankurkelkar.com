---
import '../styles/global.css'

export interface Props {
	title?: string;
}

const { title = "Ankur Kelkar - Data & Analytics Engineer" } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Ankur Kelkar - Experienced Data and Analytics Engineer with 10+ years in Travel Tech, Marketing Technology & Healthcare IT." />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="author" content="Ankur Kelkar" />
		<meta name="keywords" content="Data Engineer, Data Architect, Analytics Engineer, Snowflake, dbt, AWS, Python, BI, Data Science" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://ankurkelkar.dev/" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content="Experienced Data Architect and Analytics Engineer specializing in modern data stack technologies." />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://ankurkelkar.dev/" />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content="Experienced Data Architect and Analytics Engineer specializing in modern data stack technologies." />
		<meta property="twitter:creator" content="@ankyskywalker" />
		
		<title>{title}</title>
		
		<!-- Preload fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
	</head>
	<body class="min-h-screen bg-background text-foreground font-sans antialiased">
		<slot />
	</body>
</html>
